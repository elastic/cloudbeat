{
    "name": "pkg-plcy-kspm-vanilla-tf",
    "description": "",
    "namespace": "default",
    "policy_id": "${agent_policy_id}",
    "enabled": true,
    "inputs": [
        {
            "type": "cloudbeat/cis_k8s",
            "policy_template": "kspm",
            "enabled": true,
            "streams": [
                {
                    "enabled": true,
                    "data_stream": {
                        "type": "logs",
                        "dataset": "cloud_security_posture.findings"
                    },
                    "release": "ga"
                }
            ]
        },
        {
            "type": "cloudbeat/cis_eks",
            "policy_template": "kspm",
            "enabled": false,
            "streams": [
                {
                    "enabled": false,
                    "data_stream": {
                        "type": "logs",
                        "dataset": "cloud_security_posture.findings"
                    },
                    "release": "ga",
                    "vars": {
                        "access_key_id": {
                            "type": "text"
                        },
                        "secret_access_key": {
                            "type": "text"
                        },
                        "session_token": {
                            "type": "text"
                        },
                        "shared_credential_file": {
                            "type": "text"
                        },
                        "credential_profile_name": {
                            "type": "text"
                        },
                        "role_arn": {
                            "type": "text"
                        }
                    }
                }
            ]
        }
    ],
    "package": {
        "name": "cloud_security_posture",
        "title": "Kubernetes Security Posture Management (KSPM)",
        "version": "1.1.1"
    }
}
